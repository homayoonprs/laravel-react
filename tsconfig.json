{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": [
            "vite/client"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./resources/ts",
        "paths": {
            "@/components/*": [
                "components/*"
            ],
            "@/pages/*": [
                "pages/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/services/*": [
                "services/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/hooks/*": [
                "hooks/*"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@/routes/*": [
                "routes/*"
            ]
        }
    },
    "include": [
        "resources/ts/**/*"
    ]
}

